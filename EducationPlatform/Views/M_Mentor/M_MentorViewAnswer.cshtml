
@{
    ViewBag.Title = "M_MentorViewAnswer";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <center> <h2 class="fw-bolder text-uppercase">ViewAnswer</h2></center>
    <br />
    <br />
  
    <div class="row">
        <div class="col-lg-6">

            <table class="table table-hover">
                <thead>
                    <tr class="table-dark  text-center text-uppercase fw-bolder">

                        <th scope="col">ID</th>
                        <th scope="col">STUDENTID</th>
                        <th scope="col">ASSIGNMENTID</th>
                        <th scope="col">ANSWER</th>
                        <th scope="col">DATE</th>


                    </tr>
                </thead>
                <tbody class="table-group-divider">


                    <tr class="text-center  fw-bolder">
                        <th scope="row">@Model.Id</th>
                        <td>@Model.StudentId</td>
                        <td>@Model.AssignmentId</td>
                        <td>@Model.Answer</td>
                        <td>@Model.Date</td>

                    </tr>

            </table>



        </div>
        <div class="col-lg-6 shadow p-3 mb-5 bg-dark text-white rounded">

            <form action="~/M_Mentor/M_MentorStudentResult" method="post">
                <center>
                    <table>

                        <tr>
                            <td>
                                <h3 class="text-uppercase">Mark</h3>
                            </td>

                            <td>
                                <input type="text" name="Mark" value="" class="form-control text-center fw-bolder" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h3 class="text-uppercase">Comment</h3>
                            </td>

                            <td>
                                <input type="text" name="Comment" value="" class="form-control text-center fw-bolder" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h3 class="text-uppercase">Date</h3>
                            </td>

                            <td>
                                <input type="date" name="Date" value="" class="form-control text-center fw-bolder" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h3 class="text-uppercase">BackResult</h3>
                            </td>
                            <td>
                                <input type="text" name="BackResult" value="" class="form-control text-center fw-bolder" />
                            </td>
                        </tr>


                        <tr>
                            <td>
                                <center>  &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <button type="submit" class="bg-success class=" text-uppercase"">Submit</button></center>
                            </td>
                        </tr>

                    </table>
                </center>
            </form>



        </div>
    </div>
</body>
</html>