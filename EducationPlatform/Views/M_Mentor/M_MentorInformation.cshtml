
@{
    ViewBag.Title = "MentorInformation";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Admin Login</title>
</head>
<body>

    <center> <h1 class="text-uppercase fw-bolder">MentorInformation</h1></center>
    <a class="btn btn-secondary fs-3 text-uppercase fw-bolder" href="~/M_Mentor/M_MentorUpdate/@Model.Id" role="button">Update</a>
    <a class="btn btn-warning fs-3 text-uppercase fw-bolder" href="~/M_Mentor/M_MentorConfirmDelete/@Model.Id" role="button">Delete</a>
    <a class="btn btn-info fs-3 text-uppercase fw-bolder" href="~/M_Mentor/M_MentorCourseDetails" role="button">Course details</a>
    <a class="btn btn-secondary fs-3 text-uppercase fw-bolder" href="~/M_Student/StudentAdd">STUDENT ADD </a>
    <a class="btn btn-secondary fs-3 text-uppercase fw-bolder" href="~/M_Student/StudentInformation">STUDENT Information </a>

    <a class="btn btn-info fs-3 text-uppercase fw-bolder" href="~/M_Mentor/M_MentorSeeNotice/@Model.Id">SEE NOTICE </a>
    <a class="btn btn-danger fs-3 text-uppercase fw-bolder" href="~/M_Mentor/M_MentorLogOut " role="button">LOGOUT</a>
    <br /><br />
    <br /><br />

    <table class="table table-hover">
        <thead>
            <tr class="table-dark fs-4 text-center text-uppercase fw-bolder">
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Password</th>
                <th scope="col">Photo</th>
                <th scope="col">Gender</th>
                <th scope="col">Institution</th>
                <th scope="col">IsValid</th>

            </tr>
        </thead>
        <tbody class="table-group-divider">


            <tr class="text-center fs-5 fw-bolder">
                <th scope="row">@Model.Id</th>
                <td>@Model.Name</td>
                <td>@Model.Address</td>
                <td>@Model.Email</td>
                <td>@Model.Phone</td>
                <td>@Model.Password</td>
                <td>@Model.Photo</td>
                <td>@Model.Gender</td>
                <td>@Model.Institution</td>
                <td>@Model.IsValid</td>



            </tr>


        </tbody>
    </table>
</body>
</html>