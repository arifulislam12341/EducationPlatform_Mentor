
@{
    ViewBag.Title = "M_MentorLogIN";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>

    <center>
        <h2 class="fw-light-bolder">MENTOR LOGIN</h2>
        <div class="col-lg-4 "></div>
        <div class="col-lg-4 shadow p-3 mb-5 bg-body rounded">
            <form action="" method="post">

                <input type="email" name="Email" value="@(Model !=null ? Model.Email:"")" class="form-control text-center fw-bolder" placeholder="EMAIL" />


                <input type="password" name="Password" value="@(Model !=null ? Model.Password:"")" class="form-control text-center fw-bolder" placeholder="PASSWORD" />
                <br />
                <button type="submit" class="btn btn-success fw-bolder">LOGIN</button>

                <h3>@ViewBag.log</h3>
            </form>
        </div>
        <div class="col-lg-4 "></div>
    </center>
    </body>
</html>