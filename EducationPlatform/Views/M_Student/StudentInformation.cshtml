
@{
    ViewBag.Title = "StudentInformation";
}


<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <center><h1 class="fw-bolder">StudentInformation</h1></center>
    <table class="table table-hover">
        <thead>
            <tr class="table-dark  text-center text-uppercase fw-bolder">
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Password</th>
                <th scope="col">Photo</th>
                <th scope="col">Gender</th>
                <th scope="col">Institution</th>
                <th scope="col">IsValid</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">

            @foreach (var p in Model)
            {
                <tr class="text-center  fw-bolder">
                    <th scope="row">@p.Id</th>
                    <td>@p.Name</td>
                    <td>@p.Address</td>
                    <td>@p.Email</td>
                    <td>@p.Phone</td>
                    <td>@p.Password</td>
                    <td>@p.Photo</td>
                    <td>@p.Gender</td>
                    <td>@p.Institution</td>
                    <td>@p.IsValid</td>


                    <td>
                        <a class="btn btn-danger" href="~/M_Student/M_StudentDelete/@p.Id" role="button">Delete</a>
                    </td>

                </tr>
            }
            <a class="btn btn-success  text-uppercase fw-bolder" href="~/M_Mentor/M_MentorInformation" role="button">BACK</a>

            <a class="btn btn-danger  text-uppercase fw-bolder" href="~/M_Mentor/M_MentorLogOut" role="button">LOGOUT</a>

        </tbody>
    </table>

</body>
</html>