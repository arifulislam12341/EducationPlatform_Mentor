
@{
    ViewBag.Title = "StudentCreate";
}



<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <center>
        <h2 class="text-uppercase fw-bolder">add student</h2>
        <form action="" method="post">
            <div class="col-lg-3 "></div>
            <div class="col-lg-6 shadow p-3 mb-5 bg-body rounded">
                <table class="table table-dark table-borderless">




                    <tr>
                        <td>
                            <h3 class="text-uppercase">NAME</h3>
                        </td>
                        <td>
                            <input type="text" name="Name" value="@(Model !=null ? Model.Name:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <h3 class="text-uppercase">Address</h3>
                        </td>
                        <td>
                            <input type="text" name="Address" value="@(Model !=null ? Model.Address:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>


                    <tr>
                        <td>   <h3 class="text-uppercase">Email</h3></td>
                        <td>
                            <input type="email" name="Email" value="@(Model !=null ? Model.Email:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <h3 class="text-uppercase">Phone</h3>
                        </td>
                        <td>
                            <input type="text" name="Phone" value="@(Model !=null ? Model.Phone:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3 class="text-uppercase">Photo</h3>
                        </td>
                        <td>
                            <input type="image" name="Photo" value="@(Model !=null ? Model.Photo:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3 class="text-uppercase">Education</h3>
                        </td>
                        <td>
                            <input type="text" name="Education" value="@(Model !=null ? Model.Education:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3 class="text-uppercase">Institute</h3>
                        </td>
                        <td>
                            <input type="text" name="Institution" value="@(Model !=null ? Model.Institution:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3 class="text-uppercase">Password</h3>
                        </td>
                        <td>
                            <input type="password" name="Password" value="@(Model !=null ? Model.Password :"")" class="form-control text-center fw-bolder" />

                        </td>
                    </tr>

                    <tr>
                        <td>
                            <h3 class="text-uppercase">Gender</h3>
                        </td>
                        <td>
                            <input type="text" name="Gender" value="@(Model !=null ? Model.Gender:"")" class="form-control text-center fw-bolder" />
                        </td>
                    </tr>


                </table>

                <button type="submit" class="btn btn-success fs-3 text-uppercase fw-bolder">add</button>

            </div>

        </form>
        <div class="col-lg-3 "></div>
    </center>
</body>
</html>